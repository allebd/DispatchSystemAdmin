<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ambulance_logo"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ADMIN REGISTRATION"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"/>

        <!--  Username Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/reg_adminname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hospital Name"
                android:inputType="text"
                tools:ignore="HardcodedText"/>
        </android.support.design.widget.TextInputLayout>

        <!--  Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/reg_adminemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                tools:ignore="HardcodedText"/>
        </android.support.design.widget.TextInputLayout>

        <!--  Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/reg_adminpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                tools:ignore="HardcodedText"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/reg_adminaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hospital Address"
                android:inputType="text"
                tools:ignore="HardcodedText"/>
        </android.support.design.widget.TextInputLayout>


        <!--  Phone Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <EditText
                android:id="@+id/reg_adminphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tel."
                android:inputType="phone"
                tools:ignore="HardcodedText"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_adminregister"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:padding="14dp"
            android:text="Register"
            tools:ignore="HardcodedText"/>


        <Button
            android:id="@+id/btnSignAdmin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="ADMIN LOGIN"
            tools:ignore="HardcodedText"/>

    </LinearLayout>

</layout>